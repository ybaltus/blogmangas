{% extends 'base.html.twig' %}

{% block title %}Liste des mangas!{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.type) }}
                </div>
                <div class="col">
                    {{ form_row(form.minYear) }}
                </div>
                <div class="col">
                {{ form_row(form.maxYear) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    {{ form_row(form.complete) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-3">
        <h1>Liste des mangas.</h1>
        <div class="row">

            {{ include ('mangas/_mangasNotComplete.html.twig', {'mangas':mangas})}}
        </div>
        {# display navigation #}
        <div class="navigation mt-4">
            {{ knp_pagination_render(mangas) }}
        </div>
    </div>
{% endblock %}
{% block javascripts_additionals %}
    {{ encore_entry_script_tags('select2') }}
{% endblock %}
