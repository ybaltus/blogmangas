{% extends 'base.html.twig' %}

{% block title %}Gérer les options{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gérer les options</h1>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        <table class="table table-striped">
            <thead>
                <th>Noms</th>
                <th>Actions</th>
            </thead>
            <tbody>
                {% for option in options %}
                    <tr>
                        <td>{{ option.name }}</td>
                        <td>
                            <a href="{{ path('admin_options_edit', {'name_slug':option.nameSlug, 'id':option.id}) }}" class="btn btn-secondary">Éditer</a>
                            <form method="post" action="{{ path('admin_options_delete', {'name_slug':option.nameSlug, 'id':option.id}) }}" style="display: inline-block" onsubmit="return confirm('Confirmez vous la suppression?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete'~option.id) }}">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin_options_add') }}" class="btn btn-primary">Ajouter une option</a>
        </div>
    </div>
{% endblock %}
