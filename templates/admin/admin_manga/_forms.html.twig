{{ form_start(form) }}
{{ form_errors(form) }}
<div class="row">
    <div class="col-md-6">{{ form_row(form.title) }}</div>
    <div class="col-md-6">{{ form_row(form.author) }}</div>
    <div class="col-md-6">{{ form_row(form.year) }}</div>
    <div class="col-md-6">{{ form_row(form.type) }}</div>
    <div class="col-md-6">{{ form_row(form.city) }}</div>
    <div class="col-md-6">{{ form_row(form.country) }}</div>
    <div class="col-md-12">{{ form_row(form.description) }}</div>
    <div class="col-md-12"> {{ form_row(form.options) }}</div>
    <div class="col-md-12"> {{ form_row(form.imageFile) }}</div>
</div>
<div class="row" id="div_images">
    <div class="col-md-12 images_current">
    {% for image in form.images %}
        <div class="image">
            <div id="manga_images_{{ loop.index -1 }}">
                <div class="form-group col-md-4 mt-3">
                    {{ form_widget(image.imageFile) }}
                    <label class="custom-file-label">Choisir un fichier</label>
                </div>
                <hr>
            </div>
        </div>
    {% endfor %}
    </div>
    <div class="col-md-12 images images_new" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}"></div>
</div>
<div class="row">
    <div class="col-md-2">{{ form_row(form.exist_episode) }}</div>
    <div class="col-md-2">{{ form_row(form.exist_scan) }}</div>
    <div class="col-md-2">{{ form_row(form.complete) }}</div>
</div>
<div class="row" id="div_scans">
    {{ form_label(form.scans) }}
    <div class="col-md-12 form-inline">
        <div class="col-md-6 form-group">
            {{ form_label(form.scans.current_chapter) }}
            {{ form_widget(form.scans.current_chapter) }}
        </div>
        <div class="col-md-6 form-group">
            {{ form_label(form.scans.max_chapter) }}
            {{ form_widget(form.scans.max_chapter) }}
        </div>
    </div>
</div>
<div class="row" id="div_animes" {% if manga.existEpisode == false%}hidden{% endif %}>
    {{ form_label(form.animes) }}
    <div class=" col-md-12 animes_current">
        {% for anime in form.animes %}
            <div class="anime">
                <div id="manga_animes_{{ loop.index-1 }}">
                    <div class="form-group col-md-4">
                        {{ form_label(anime.current_episode) }}
                        {{ form_widget(anime.current_episode, {'attr' :{'class': 'col-md-6'}}) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_label(anime.max_episode) }}
                        {{ form_widget(anime.max_episode, {'attr' :{'class': 'col-md-6'}}) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_label(anime.season) }}
                        {{ form_widget(anime.season, {'attr' :{'class': 'col-md-6'}}) }}
                    </div>
                </div>
            </div>
            <hr>
        {% endfor %}
    </div>
    <div class="col-md-12 animes_add" data-prototype="{{ form_widget(form.animes.vars.prototype)|e('html_attr') }}"></div>
</div>
{{ form_end(form) }}